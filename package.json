{
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --cache",
    "typecheck": "tsc --noEmit",
    "icons": "node scripts/gen-icons.mjs",
    "og": "tsx scripts/gen-og.mts",
    "slides": "tsx scripts/gen-slides.mts",
    "slides:pdf": "tsx scripts/export-pdf.mts",
    "slides:pdf:all": "tsx scripts/export-pdf.mts --include-drafts",
    "generate": "pnpm icons && pnpm og && pnpm slides && pnpm slides:pdf",
    "clean": "rm -rf .next .turbo out public/slides public/slides-static public/og-news public/og.jpg",
    "clean:public": "rm -rf public/slides public/slides-static public/og-news public/og.jpg public/favicon-*.png public/favicon.ico public/apple-touch-icon*.png",
    "build:min": "pnpm icons && pnpm og && next build",
    "build:pdf": "pnpm icons && pnpm og && pnpm slides:pdf && next build",
    "rebuild": "pnpm clean:public && pnpm generate && next build",
    "build:local": "pnpm generate && next build",
    "postinstall": "playwright install chromium"
  },
  "dependencies": {
    "@formspree/react": "^3.0.0",
    "next": "^15.5.2",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@next/eslint-plugin-next": "^15.5.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.5",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^3",
    "eslint-plugin-import": "^2.31.0",
    "globals": "^15.15.0",
    "gray-matter": "^4.0.3",
    "playwright": "^1.48.2",
    "png-to-ico": "^3.0.1",
    "postcss": "^8.4.31",
    "reveal.js": "^5.1.0",
    "satori": "^0.11.3",
    "sharp": "^0.33.3",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.0.0"
  }
}